{
  "files.associations": {
    "*.json": "jsonc"
  },

  "json.schemas": [
    {
      "fileMatch": ["*.json"],
      "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/vscode-settings.json"
    }
  ],

  "files.watcherExclude": {
    "bazel-out/**": true,
    "bazel-bin/**": true,
    "bazel-cloze-data/**": true,
    "bazel-test-logs/**": true,
  },
  "files.exclude": {
    "bazel-out/**": true,
    // "bazel-bin/**": true,
    "bazel-cloze-data/**": true,
    "bazel-testlogs/**": true,
  }

}