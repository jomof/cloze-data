{
  "files.associations": {
    "*.json": "jsonc"
  },

  "json.schemas": [
    {
      "fileMatch": ["*.json"],
      "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/vscode-settings.json"
    }
  ],

  "python.analysis.exclude": [
    "../**",            // anything above the workspace
    "**/.git/**",       // optional: skip Git internals
    "**/__pycache__/**", // optional: skip caches
    "bazel-out/**",
    "bazel-bin/**",
    "bazel-cloze-data/**",
    "bazel-test-logs/**",
  ],

  "files.watcherExclude": {
    "bazel-out/**": true,
    "bazel-bin/**": true,
    "bazel-cloze-data/**": true,
    "bazel-test-logs/**": true,
  },
  "files.exclude": {
    "bazel-out/**": true,
    // "bazel-bin/**": true,
    "bazel-cloze-data/**": true,
    "bazel-testlogs/**": true,
  }

}