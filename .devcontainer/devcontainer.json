{
  "build": {
      "dockerfile": "Dockerfile"
  },
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "mkdir -p /workspaces/cloze-data/.secrets && echo \"$GCP_CREDENTIALS\" > /workspaces/cloze-data/.secrets/bazel-cache-key.json",
  "postAttachCommand": {
    "bash": "bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "arcanis.vscode-zipfs",
        "ms-python.python",
        "BazelBuild.vscode-bazel",
        "GitHub.copilot"
      ]
    },
    "codespaces": {
      "openFiles": [

      ]
    }
  }
}
